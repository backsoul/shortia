# DeepSeek API Configuration
DEEPSEEK_API_KEY=...your_deepseek_api_key_here...
DEEPSEEK_API_URL=https://api.deepseek.com/v1

# OpenAI Whisper API Configuration
OPENAI_API_KEY=...your_openai_api_key_here...
OPENAI_API_URL=https://api.openai.com/v1

# Or use Ollama for local AI
USE_OLLAMA=false
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=deepseek-r1:latest

# Server Configuration
PORT=8080
FRONTEND_PORT=5173
HOST=localhost

# Database
DB_PATH=../storage/database.db

# Storage Paths
STORAGE_PATH=../storage
VIDEOS_PATH=../storage/videos
CLIPS_PATH=../storage/clips
TRANSCRIPTS_PATH=../storage/transcripts

# Binaries Paths (adjust for your system)
FFMPEG_PATH=ffmpeg
YTDLP_PATH=../binaries/yt-dlp.exe
WHISPER_PATH=../binaries/whisper

# Processing Settings
MAX_VIDEO_DURATION=3600
MAX_CONCURRENT_JOBS=2
CLIP_MAX_DURATION=60

# Whisper Settings
WHISPER_MODEL=base
WHISPER_LANGUAGE=auto